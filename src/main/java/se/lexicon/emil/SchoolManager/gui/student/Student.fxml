<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.lexicon.emil.SchoolManager.gui.student.StudentEventHandler">
   <bottom>
      <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#newButtonPressed" prefWidth="75.0" text="New" />
            <Button mnemonicParsing="false" prefWidth="75.0" text="Save" />
            <Button mnemonicParsing="false" onAction="#searchButtonPressed" prefWidth="75.0" text="Search" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="idField">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <TextField fx:id="nameField" />
            <TextField fx:id="surnameField" />
            <TextField fx:id="adressField" />
            <TextField fx:id="emailField" />
         </children>
         <padding>
            <Insets right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <left>
      <VBox prefHeight="200.0" prefWidth="80.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ID" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Surname" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Adress" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="15.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
